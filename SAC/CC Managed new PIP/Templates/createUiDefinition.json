{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "fwVmName",
        "type": "Microsoft.Common.TextBox",
        "label": "Secure Access Concentrator name",
        "toolTip": "Enter the name for the new NextGen Secure Access Concentrator VM.",
        "defaultValue": "BarracudaSAC",
        "constraints": {
          "required": true,
          "regex": "^[A-Za-z0-9-_]{1,15}$",
          "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1 to 15 characters."
        }
      }

    ],
    "steps": [
      {
        "name": "DeployConfig",
        "label": "Deployment Options",
        "subLabel": {
          "preValidation": "Define where to deploy your firewall",
          "postValidation": "Done"
        },
        "bladeTitle": "Deployment Options",
        "elements": [
          {
            "name": "fwVmSizeBasic",
            "type": "Microsoft.Common.DropDown",
            "label": "SAC size",
            "toolTip": "Select the SAC size matching the purchased license.",
            "defaultValue": "Standard_D2_v2",
            "constraints": {
              "required": true,
              "allowedValues": [
                {
                  "label": "Medium (Level 4)",
                  "value": "2"
                },
                {
                  "label": "Large (Level 6)",
                  "value": "3"
                },
                {
                  "label": "X-Large (Level 8)",
                  "value": "4"
                }
              ]
            },
            "visible": true
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage Account",
            "toolTip": "Select the storage account for the OS disk of the SAC VM.",
            "defaultValue": {
              "type": "Standard_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Standard_LRS",
                "Premium_LRS"
              ],
              "required": true
            },
            "options": {
              "hideExisting": true
            }
          },
          {
            "name": "virtualNetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnets"
            },
            "toolTip": {
              "virtualNetwork": "Virtual Network Name",
              "subnets": "Create a dedicated subnet for the SAC VM."
            },
            "defaultValue": {
              "name": "newVirtualNetwork",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/24"
            },
            "options": {
              "hideExisting": true
            },
            "subnets": {
              "fwSubnet": {
                "label": "SAC subnet",
                "defaultValue": {
                  "name": "FirewallSubnet",
                  "addressPrefixSize": "/29"
                },
                "constraints": {
                  "minAddressPrefixSize": "/30",
                  "minAddressCount": 2,
                  "requireContiguousAddresses": false
                }
              }

            }
          }
        ]
      },
      {
        "name": "NetworkConfig",
        "label": "Network Configuration",
        "subLabel": {
          "preValidation": "Configure basic network settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Network Configuration",
        "elements": [
          {
            "name": "fwVmAddress",
            "type": "Microsoft.Common.TextBox",
            "label": "SAC static private IP address",
            "toolTip": "Enter an IP address from the SAC subnet.",
            "defaultValue": "[steps( 'DeployConfig' ).virtualNetwork.subnets.fwSubnet.startAddress]",
            "constraints": {
              "required": false,
              "regex": "^([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])$",
              "validationMessage": "Must be a valid IPv4 address from Firewall Subnet"
            }
          },
          {
            "name": "publicIp",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address name",
              "domainNameLabel": "Domain name label"
            },
            "toolTip": {
              "publicIpAddress": "Enter the name of the public IP address used for the SAC VM.",
              "domainNameLabel": "Prefix to use for public IP address DNS name (e.g. [prefix].region.cloudapp.azure.com)"
            },
            "defaultValue": {
              "publicIpAddress": "[concat( basics( 'fwVmName' ), '-pip' )]",
              "domainNameLabel": "[toLower( basics( 'fwVmName' ))]"
            },
            "options": {
              "hideNone": true,
              "hideDomainNameLabel": false,
              "hideExisting": true
            },
            "constraints": {
              "required": false
            },
            "visible": true
          }

        ]
      },
      {
        "name": "CCConfig",
        "label": "NextGen Control Center",
        "subLabel": {
          "preValidation": "Connect to NextGen Control Center",
          "postValidation": "Done"
        },
        "bladeTitle": "NextGen Control Center Connection",
        "elements": [
          {
            "name": "ccIpAddress",
            "type": "Microsoft.Common.TextBox",
            "label": "IP address for NextGen Control Center",
            "toolTip": "The new SAC VM connects to this public IP address on TCP port 807 to retrieve the configuration from the Control Center.",
            "constraints": {
              "required": true,
              "regex": "^([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\.([01]?\\d\\d?|2[0-4]\\d|25[0-5])$",
              "validationMessage": "Must be a valid IPv4 address of NGCC"
            }
          },
          {
            "name": "ccRangeId",
            "type": "Microsoft.Common.TextBox",
            "label": "Control Center range number",
            "toolTip": "Enter the range number the configuration for the new SAC is located in.",
            "constraints": {
              "required": true,
              "regex": "^[0-9]{1,2}$",
              "validationMessage": "Must be a range ID number"
            }
          },
          {
            "name": "ccClusterName",
            "type": "Microsoft.Common.TextBox",
            "label": "Control Center cluster name",
            "toolTip": "Enter the cluster name the configuration for the new SAC is in.",
            "constraints": {
              "required": true,
              "regex": "^[a-zA-Z0-9-]{1,16}$",
              "validationMessage": "Must be a valid NGCC cluster name"
            }
          },
          {
            "name": "ccSecret",
            "type": "Microsoft.Common.TextBox",
            "label": "Shared key",
            "toolTip": "Enter the shared secret configured as the PAR file retrieval key on the Control Center.",
            "constraints": {
              "required": true
            },
            "options": {
              "hideConfirmation": true
            }
          }
        ]
      },
      {
        "name": "AdvancedConfig",
        "label": "Advanced",
        "subLabel": {
          "preValidation": "Advanced Settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Advanced",
        "elements": [
          {
            "name": "fwVmSizeStandard",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "SAC VM size",
            "toolTip": "Select the VM size. The number of CPU cores must match your license.",
            "recommendedSizes": [
              "[concat( 'Standard_D', steps( 'DeployConfig' ).fwVmSizeBasic )]",
              "[concat( 'Standard_A', steps( 'DeployConfig' ).fwVmSizeBasic )]",
              "[concat( 'Standard_D', steps( 'DeployConfig' ).fwVmSizeBasic, '_v2' )]"
            ],
            "constraints": {
              "allowedSizes": [ ],
              "required": "[equals( steps( 'DeployConfig' ).storageAccount.type, 'Standard_LRS' )]"
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "barracudanetworks",
              "offer": "barracuda-ng-firewall",
              "sku": "byol"
            },
            "count": "1",
            "visible": "[equals( steps( 'DeployConfig' ).storageAccount.type, 'Standard_LRS' )]"
          },
          {
            "name": "fwVmSizePremium",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual firewall instance size",
            "toolTip": "The size of virtual machine to provision.",
            "recommendedSizes": [
              "[concat( 'Standard_DS', steps( 'DeployConfig' ).fwVmSizeBasic )]",
              "[concat( 'Standard_DS', steps( 'DeployConfig' ).fwVmSizeBasic, '_v2' )]"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_DS1",
                "Standard_DS2",
                "Standard_DS3",
                "Standard_DS4",
                "Standard_DS1_v2",
                "Standard_DS2_v2",
                "Standard_DS3_v2",
                "Standard_DS4_v2"
              ],
              "required": "[equals( steps( 'DeployConfig' ).storageAccount.type, 'Premium_LRS' )]"
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "barracudanetworks",
              "offer": "barracuda-ng-firewall",
              "sku": "byol"
            },
            "count": "1",
            "visible": "[equals( steps( 'DeployConfig' ).storageAccount.type, 'Premium_LRS' )]"
          }
        ]
      }
    ],
    "outputs": {
      "fwVmName": "[basics( 'fwVmName' )]",
      "fwVmSize_Standard_LRS": "[steps( 'AdvancedConfig' ).fwVmSizeStandard]",
      "fwVmSize_Premium_LRS": "[steps( 'AdvancedConfig' ).fwVmSizePremium]",
      "fwVmAddress": "[steps( 'NetworkConfig' ).fwVmAddress]",
      "fwSubnetName": "[steps( 'DeployConfig' ).virtualNetwork.subnets.fwSubnet.name]",
      "fwSubnetAddress": "[steps( 'DeployConfig' ).virtualNetwork.subnets.fwSubnet.addressPrefix]",
      "publicIpName": "[steps( 'NetworkConfig' ).publicIp.name]",
      "publicIpDnsName": "[steps( 'NetworkConfig' ).publicIp.domainNameLabel]",
      "publicIpAddressType": "Dynamic",
      "newStorageAccountName": "[steps( 'DeployConfig' ).storageAccount.name]",
      "newStorageAccountType": "[steps( 'DeployConfig' ).storageAccount.type]",
      "vnetName": "[steps( 'DeployConfig' ).virtualNetwork.name]",
      "vnetAddressSpace": "[steps( 'DeployConfig').virtualNetwork.addressPrefix]",
      "ccIpAddress": "[steps( 'CCConfig' ).ccIpAddress]",
      "ccClusterName": "[steps( 'CCConfig' ).ccClusterName]",
      "ccRangeId": "[steps( 'CCConfig' ).ccRangeId]",
      "ccSecret": "[steps( 'CCConfig' ).ccSecret]"
    }
  }




}
